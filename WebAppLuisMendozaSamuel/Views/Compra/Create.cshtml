@model WebAppLuisMendozaSamuel.Models.Entidades.Compra

@{
    ViewData["Title"] = "Nueva Compra";
}

<br /><br /><br />

<h5 class="text-danger">@ViewBag.alerta</h5>

<h4>Nueva Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Producto</label>
                <select asp-for="idProducto" class="form-control" asp-items="@(new SelectList(ViewBag.productos,"idProducto","nombre"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <select asp-for="idCliente" class="form-control" asp-items="@(new SelectList(ViewBag.clientes,"idCliente","nombre"))"></select>
            </div>
            
            <div class="input-field">
                <label asp-for="cantidad" id="cantidad" class="control-label"></label>
                <input asp-for="cantidad" for="cantidad" class="form-control" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="input-field hidden">
                <label asp-for="precioTotal" id="precioTotal" class="control-label"></label>
                <input asp-for="precioTotal" for="precioTotal" class="form-control" />
                <span asp-validation-for="precioTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

