@model WebAppLuisMendozaSamuel.Models.Entidades.Producto

@{
    ViewData["Title"] = "Editar";
}

<br /><br /><br />

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idProducto" />
            <div class="input-field">
                <label asp-for="nombre" id="nombre" class="control-label"></label>
                <input asp-for="nombre" for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="stock" id="stock" class="control-label"></label>
                <input asp-for="stock" for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="precioUnitario" id="precioUnitario" class="control-label"></label>
                <input asp-for="precioUnitario" for="precioUnitario" class="form-control" />
                <span asp-validation-for="precioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="material-icons">keyboard_arrow_left</i> Volver</a>
</div>

