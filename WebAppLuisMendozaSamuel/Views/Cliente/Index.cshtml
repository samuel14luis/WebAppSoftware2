@model ICollection<WebAppLuisMendozaSamuel.Models.Entidades.Cliente>
@{
    ViewData["Title"] = "Index";
}

<h2 class="header center black-text">Lista de clientes</h2>

<h5><a asp-action="Create"><i class="material-icons">add_circle</i> Agregar un nuevo cliente</a></h5>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre del cliente</th>
            <th>Edad</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nombre</td>
                <td>@item.edad</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) | @Html.ActionLink("Detalles", "Details", new { id = item.id }) | @Html.ActionLink("Eliminar","Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
