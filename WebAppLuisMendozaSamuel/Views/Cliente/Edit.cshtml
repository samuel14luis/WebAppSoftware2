@model WebAppLuisMendozaSamuel.Models.Entidades.Cliente

@{
    ViewData["Title"] = "Editar";
}

<br /><br /><br />

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idCliente" />
            <div class="input-field">
                <label asp-for="nombre" id="nombre" class="control-label"></label>
                <input asp-for="nombre" for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="edad" id="edad" class="control-label"></label>
                <input asp-for="edad" for="edad" class="form-control" />
                <span asp-validation-for="edad" class="text-danger"></span>
            </div>
            <div class="input-field">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

