@using Microsoft.AspNetCore.Identity
@using WebAppLuisMendozaSamuel.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hola @UserManager.GetUserName(User).Split("@")[0]!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-small">Salir</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrarme</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a></li>
    </ul>
}
